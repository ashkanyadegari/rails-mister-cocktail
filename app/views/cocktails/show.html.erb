<h1><%= @cocktail.name %></h1>
<img src="<%= @cocktail.image %>" alt="">
<p><%= @cocktail.description %></p>
<h3>Ingredients: </h3>
<ol>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.description %> | <%= Ingredient.find(dose.ingredient_id).name %> | <%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: 'U sure bro?' }  %>
</li>
<% end %>
</ol>


<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Back to list',  cocktails_path %>
<%= link_to 'Create dose',  new_cocktail_dose_path(@cocktail)%>
